@model IEnumerable<EndTermProject.Models.ViewModels.OrderVm>

@{
    ViewBag.Title = "OrderItem";
}


<div class="Container" style="margin: 20px 80px">
    <div class="row mb-3" style="border: 1px solid rgb(234, 234, 234)">
        <!-- <table class="table table-bordered" style="margin:0px"> -->
        <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <td>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    @foreach (var model in Model)
                                    {
                                        foreach (var item in model.OrderItems)
                                        {
                                            <img src="/Images/@item.ProductImage" alt="圖片異常" style="width: 180px" />
                                            <div style="display: inline-block; margin: 10px">
                                                <div><strong>@item.Brand</strong></div>
                                                @item.ProductName<br />x @item.Qty
                                            </div>
                                            <div style="text-align: end">
                                                商品小計： <span style="font-weight: bold">@item.SubTotal</span>
                                            </div>
                                            <hr />
                                        }
                                    }
                                    <div style="text-align: end">
                                        運費： <span style="font-weight: bold" ;>NT$ 60</span>
                                    </div>
                                    <div style="text-align: end">
                                        @Html.DisplayNameFor(model => model.Total)： <span style="font-weight: bold" ;>@Html.DisplayFor(modelItem => modelItem.First().Total)</span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div style="background-color: rgb(219, 219, 219);height: 100%;padding: 10px;">
                                        <div style="margin-bottom: 5px">收件人資訊</div>
                                        <ul style="list-style: none">
                                            <li class="limb">@Html.DisplayNameFor(model => model.Receiver)： @Html.DisplayFor(modelItem => modelItem.First().Receiver)</li>
                                            <li class="limb"> @Html.DisplayNameFor(model => model.TelePhone)：@Html.DisplayFor(modelItem => modelItem.First().TelePhone)</li>
                                            <li class="limb"> @Html.DisplayNameFor(model => model.Email)：@Html.DisplayFor(modelItem => modelItem.First().Email)</li>
                                            <li class="limb"> @Html.DisplayNameFor(model => model.Paytype)：@Html.DisplayFor(modelItem => modelItem.First().Paytype)</li>
                                            <li class="limb"> @Html.DisplayNameFor(model => model.Status)：@Html.DisplayFor(modelItem => modelItem.First().Status)</li>
                                            <li class="limb"> @Html.DisplayNameFor(model => model.OrderTime)：@Html.DisplayFor(modelItem => modelItem.First().OrderTime)</li>
                                        </ul>
                                        <hr />
                                        <div style="margin-top: 10px">
                                            <p>通知出貨後約 1 - 2 天寄達 | 提供追蹤</p>
                                        </div>
                                        <div style="margin-top: 10px">
                                            <p>發票/收據開立後將寄至購買人地址</p>
                                            @Html.DisplayNameFor(model => model.FullAddress)：@Html.DisplayFor(modelItem => modelItem.First().FullAddress)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <!-- </table> -->
    </div>
    <div class="text-end">
        <a href="@Url.Action("Index", "Orders")" class="btn btn-primary">上一頁</a>
    </div>
</div>