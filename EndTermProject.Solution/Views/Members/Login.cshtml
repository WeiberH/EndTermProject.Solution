@model EndTermProject.Solution.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">首頁</a></li>
                <li class="breadcrumb-item active" aria-current="page">會員</li>
            </ol>
        </nav>
    </div>
    <hr />

    <h1 style="text-align: center"><span>一登入/註冊一</span></h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6"
                 style="text-align: center; border-right: darkolivegreen solid 1px;">
                <p style="font-size: 1.5em; margin-top: 10px;">
                    <strong>會員登入</strong>
                </p>

                <div style="text-align: left">
                    <p style="font-size: 0.9em; margin-top: 10px; color: darkgray">
                        若您曾在River網站完成註冊，請使用同一帳號密碼直接於此登入。
                    </p>
                    <p style="font-size: 0.9em; margin-top: 10px; color: red">
                        首次拜訪本網站請先至［註冊與驗證］，完成註冊流程。
                    </p>

                    <form class="row g-3">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Account, new { @class = "form-label", style = "margin-top: 10px" })
                            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", style = "width: 100%" } })
                            @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="d-flex justify-content-end" style="margin:7px">
                            <span>
                                <a href="@Url.Action("ForgetPassword", "Members")" style="text-decoration: none">忘記密碼</a>
                            </span>

                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="submit" value="登入" class="btn btn-primary"
                               style="width: 90%; margin-top: 5px;margin-left: 5%;" />
                    </form>
                </div>
            </div>
            <div class="col-lg-6" style="text-align: center">
                <strong style="font-size: 1.5em">註冊與驗證</strong>
                <div style="text-align: left">
                    <p style="font-size: 0.9em; margin-top: 10px; color: darkgray">
                        若您已完成註冊與驗證，請直接至［會員登入］登入帳號密碼即可開始購物。
                    </p>
                    <br />
                    <p style="font-size: 0.9em; margin-top: 10px; color: red">
                        如有問題您可以：
                    </p>
                    <a href="https://line.me/zh-hant/" target="_blank" style="text-decoration: none; color: black"><strong style="font-size: 0.9em">點此聯絡客服</strong></a><br />
                    <a href="@Url.Action("RegisterFAQ","Home")" style="text-decoration: none; color: black">
                        <strong style="font-size: 0.9em">註冊問題</strong>
                    </a>
                    <p style="font-size: 0.9em; margin-top: 10px; color: darkgray">
                        當完成註冊後，您便可用同一帳號密碼於River網站購物。
                    </p>
                </div>
                @Html.ActionLink("註冊", "Register", "Members", null, new { @class = "btn btn-primary", style = "width: 90%" })

            </div>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
