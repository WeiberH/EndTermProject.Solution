
@{
    ViewBag.Title = "RegisterConfirm";
}


<h2 style="margin-bottom:15px">恭喜您已經註冊完畢，請至信箱收取確認信並點選連結開通帳號</h2>
<br />
<div id="timeBox"></div>
<script>
     var count = 5;

    function countDown() {
        var timeBox = document.getElementById("timeBox");

        if (count <= 0) {

            timeBox.innerHTML = "正在回到首頁";
            window.location.href = '@Url.Action("Index", "Home")';
        } else {
            // 如果还在倒计时中，显示剩余时间
            timeBox.innerHTML = count + " 秒後將自動回到首頁";
            count -= 1;
            setTimeout(countDown, 1000);
        }
    }


    countDown();
</script>





